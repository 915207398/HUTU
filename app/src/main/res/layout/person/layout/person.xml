<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f3"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_marginTop="12dp"
        android:background="#E6EFEF" >

        <ImageView
            android:id="@+id/imaget1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/newlogo2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="#E6EFEF"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="100dp"
                android:text="person"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="3dp"
                android:text="ID:66666666"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="#E6EFEF"
        android:textSize="17dp"
        android:paddingRight="220dp"
        android:text="@string/person_news" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"
        />

    <Button
        android:id="@+id/bt2"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#E6EFEF"
        android:textSize="17dp"
        android:paddingRight="220dp"
        android:text="@string/person_account" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"
        />
    <Button
        android:id="@+id/bt3"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#E6EFEF"
        android:textSize="17dp"
        android:paddingRight="220dp"
        android:text="@string/person_head_portrait" />
    <Button
        android:id="@+id/bt4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="#E6EFEF"
        android:textSize="17dp"
        android:paddingRight="220dp"
        android:text="@string/person_change_password" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#cdcdcd"
        />

    <Button
        android:id="@+id/person_bt5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E6EFEF"
        android:textSize="17dp"
        android:paddingRight="250dp"
        android:text="@string/exit" />
</LinearLayout>
